{
  "manifest_version": 2,
  "name": "Best Google SEO Helper",
  "description": "Strong Klout and Good RT.",
  "version": "1.0",
  "browser_action": {
    "default_icon": "icon-small.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "logo16x16.png",
    "48": "logo48x48.png",
    "128": "logo128x128.png"
  },
  "background": {
    "scripts": [ "background.js"],
    "persistent": true
  }, 
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content.js"]
    }
  ]
}